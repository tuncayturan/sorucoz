{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --prefer-offline --no-audit && NODE_OPTIONS='--max-old-space-size=4096' npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "service": {
    "ports": [
      {
        "port": 3000,
        "protocol": "http"
      }
    ]
  }
}

